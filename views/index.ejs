      <script>
        $('.bxslider').bxSlider({
            auto: true,
            preloadImages: 'all',
            mode: 'horizontal',
            captions: false,
            controls: true,
            pager: false,
            pause: 5000,
            speed: 800,
            onSliderLoad: function () {
                $('.bxslider>li .slider-text').eq(1).addClass('active-slide');
                $(".slider-text.active-slide h1").addClass("animated bounceInUp");
                $(".slider-text.active-slide p").addClass("animated bounceInDown");
            },
            onSlideAfter: function (currentSlideNumber, totalSlideQty, currentSlideHtmlObject) {
                console.log(currentSlideHtmlObject);
                $('.active-slide').removeClass('active-slide');
                $('.bxslider>li .slider-text').eq(currentSlideHtmlObject + 1).addClass('active-slide');
                $(".slider-text.active-slide h1").addClass("animated bounceInUp");
                $(".slider-text.active-slide p").addClass("animated bounceInDown");     
            },
            onSlideBefore: function () {
                $(".slider-text.active-slide h1").removeClass("animated bounceInUp");
                $(".slider-text.active-slide p").removeClass("animated bounceInDown");  
            }
        });
